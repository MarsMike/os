#!/bin/bash
set -ex

INIT_DEP="rancher/os-bootstrap"
SHARED_DEP="rancher/os-base"
INIT_IMAGES_DST="build/images-init.tar.zst"
SYSTEM_IMAGES_DST="build/images-system.tar.zst"

cd $(dirname $0)/..

IMAGES=$(bin/host_ros c images -i build/initrd/usr/share/ros/os-config.yml)
INIT_IMAGES=""
SYSTEM_IMAGES=""

for i in ${APPEND_SYSTEM_IMAGES};do
    IMAGES="${IMAGES} ${i}"
done

for i in ${IMAGES}; do
    echo "tar-image: pull($i)"
    if ! docker inspect $i >/dev/null 2>&1; then
        docker pull ${i}
    fi

    if [ "${i%%:*}" != "$INIT_DEP" ] ; then
        SYSTEM_IMAGES="$SYSTEM_IMAGES $i"
    fi

    if [ "${i%%:*}" = "$INIT_DEP" ] || [ "${i%%:*}" = "$SHARED_DEP" ] ; then
        INIT_IMAGES="$INIT_IMAGES $i"
    fi
done

echo "tar-image: SYSTEM_IMAGES=$SYSTEM_IMAGES"
echo "tar-image: INIT_IMAGES=$INIT_IMAGES"

if [ "$COMPRESS" == "" ]; then
    ARCHIVE_CMD="zstd -f"
else
    ARCHIVE_CMD="zstd -19 -f"
fi

docker save ${INIT_IMAGES} | ${ARCHIVE_CMD} -o ${INIT_IMAGES_DST}
docker save ${SYSTEM_IMAGES} | ${ARCHIVE_CMD} -o ${SYSTEM_IMAGES_DST}

echo "tar-images: DONE"
